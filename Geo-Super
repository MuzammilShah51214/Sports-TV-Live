        <div class="video-wrapper">
            <video id="videoPlayer" class="video-player" autoplay muted playsinline>
                <source src="https://wasitv-pro.site/abbas/rapid.php?url=https://zx.visiona.top:8443/sportshdd/shj3/chunks.m3u8">
                Your browser does not support HTML5 video.
            </video>
            
            <!-- Neon Loader -->
            <div class="neon-loader" id="neonLoader">
                <div class="neon-loader-circle"></div>
                <div class="neon-loader-circle"></div>
                <div class="neon-loader-circle"></div>
                <div class="neon-loader-circle"></div>
            </div>
            
            <div class="custom-controls">
                <div class="progress-container" id="progressContainer">
                    <div class="progress-bar" id="progressBar"></div>
                </div>
                
                <div class="controls-row">
                    <div class="left-controls">
                        <button class="control-btn" id="playPauseBtn">‚ùö‚ùö</button>
                        <div class="volume-controls">
                            <button class="mute-btn" id="muteBtn">üîá</button>
                            <input type="range" class="volume-slider" id="volumeSlider" min="0" max="1" step="0.1" value="1">
                        </div>
                    </div>
                    
                    <div class="right-controls">
                        <span class="time-display" id="timeDisplay">00:00 / 00:00</span>
                        <button class="control-btn" id="fullscreenBtn">‚õ∂</button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Image button below player -->
        <div class="action-buttons">
            <button class="image-btn">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSz0g-sbV4e7afgv9pq_1xEbB6JkXQk_Sl74smTN8Mhwnj0oDqUG61x53U&s=10" alt="Like">
                Geo Super
            </button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const video = document.getElementById('videoPlayer');
            const playPauseBtn = document.getElementById('playPauseBtn');
            const progressBar = document.getElementById('progressBar');
            const progressContainer = document.getElementById('progressContainer');
            const volumeSlider = document.getElementById('volumeSlider');
            const muteBtn = document.getElementById('muteBtn');
            const timeDisplay = document.getElementById('timeDisplay');
            const fullscreenBtn = document.getElementById('fullscreenBtn');
            const neonLoader = document.getElementById('neonLoader');
            
            // Set initial state for autoplay
            playPauseBtn.textContent = '‚ùö‚ùö';
            
            // Initialize mute button based on video state
            updateMuteButton();
            
            // Show loader when video is buffering
            video.addEventListener('waiting', function() {
                neonLoader.classList.add('active');
            });
            
            video.addEventListener('playing', function() {
                neonLoader.classList.remove('active');
            });
            
            // Play/Pause toggle
            playPauseBtn.addEventListener('click', togglePlayPause);
            video.addEventListener('click', togglePlayPause);
            
            function togglePlayPause() {
                if (video.paused) {
                    video.play().catch(error => {
                        console.error('Playback failed:', error);
                    });
                    playPauseBtn.textContent = '‚ùö‚ùö';
                    playPauseBtn.style.textShadow = '0 0 10px #4285f4, 0 0 20px #4285f4';
                    setTimeout(() => {
                        playPauseBtn.style.textShadow = 'none';
                    }, 500);
                } else {
                    video.pause();
                    playPauseBtn.textContent = '‚ñ∂';
                    playPauseBtn.style.textShadow = '0 0 10px #ea4335, 0 0 20px #ea4335';
                    setTimeout(() => {
                        playPauseBtn.style.textShadow = 'none';
                    }, 500);
                }
            }
            
            // Update progress bar
            video.addEventListener('timeupdate', updateProgress);
            
            function updateProgress() {
                const percent = (video.currentTime / video.duration) * 100;
                progressBar.style.width = `${percent}%`;
                
                // Update time display
                const currentMinutes = Math.floor(video.currentTime / 60);
                const currentSeconds = Math.floor(video.currentTime % 60).toString().padStart(2, '0');
                const durationMinutes = Math.floor(video.duration / 60);
                const durationSeconds = Math.floor(video.duration % 60).toString().padStart(2, '0');
                
                timeDisplay.textContent = `${currentMinutes}:${currentSeconds} / ${durationMinutes}:${durationSeconds}`;
            }
            
            // Click on progress bar to seek
            progressContainer.addEventListener('click', function(e) {
                const pos = (e.pageX - this.offsetLeft) / this.offsetWidth;
                video.currentTime = pos * video.duration;
                
                // Add pulse effect to progress bar
                progressBar.style.transform = 'scaleY(1.5)';
                setTimeout(() => {
                    progressBar.style.transform = 'scaleY(1)';
                }, 300);
            });
            
            // Volume control
            volumeSlider.addEventListener('input', function() {
                video.volume = this.value;
                
                // Unmute video when adjusting volume if it was muted
                if (video.muted && this.value > 0) {
                    video.muted = false;
                    updateMuteButton();
                }
                
                // Update mute button if volume is set to 0
                if (this.value == 0) {
                    video.muted = true;
                    updateMuteButton();
                }
                
                // Add glow effect when adjusting volume
                this.style.boxShadow = '0 0 10px #4285f4';
                setTimeout(() => {
                    this.style.boxShadow = 'none';
                }, 500);
            });
            
            // Mute toggle
            muteBtn.addEventListener('click', function() {
                video.muted = !video.muted;
                updateMuteButton();
                
                // If unmuting and volume is 0, set to a reasonable level
                if (!video.muted && video.volume === 0) {
                    video.volume = 0.5;
                    volumeSlider.value = 0.5;
                }
            });
            
            function updateMuteButton() {
                if (video.muted || video.volume === 0) {
                    muteBtn.textContent = 'üîá';
                    muteBtn.style.textShadow = '0 0 10px #ea4335, 0 0 20px #ea4335';
                } else {
                    muteBtn.textContent = 'üîä';
                    muteBtn.style.textShadow = '0 0 10px #34a853, 0 0 20px #34a853';
                }
                setTimeout(() => {
                    muteBtn.style.textShadow = 'none';
                }, 500);
            }
            
            // Fullscreen toggle
            fullscreenBtn.addEventListener('click', toggleFullscreen);
            
            function toggleFullscreen() {
                if (!document.fullscreenElement) {
                    video.requestFullscreen().catch(err => {
                        alert(`Error attempting to enable fullscreen: ${err.message}`);
                    });
                    fullscreenBtn.classList.add('fullscreen-active');
                } else {
                    document.exitFullscreen();
                    fullscreenBtn.classList.remove('fullscreen-active');
                }
            }
            
            // Update button when video ends
            video.addEventListener('ended', function() {
                playPauseBtn.textContent = '‚ñ∂';
                playPauseBtn.style.textShadow = '0 0 10px #34a853, 0 0 20px #34a853';
                setTimeout(() => {
                    playPauseBtn.style.textShadow = 'none';
                }, 1000);
            });
            
            // Show loader initially while video loads
            neonLoader.classList.add('active');
            video.addEventListener('canplay', function() {
                neonLoader.classList.remove('active');
            });
            
            // Handle autoplay restrictions
            video.play().catch(error => {
                console.log('Autoplay prevented:', error);
                playPauseBtn.textContent = '‚ñ∂';
            });
        });
    </script>
</body>
</html>
